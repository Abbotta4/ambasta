[Unit]
Description=MongoDB MMS Automation Agent
After=network.target

[Service]
Type=simple
ExecStart=/opt/mms-automation-agent/mongodb-mms-automation-agent -f /etc/mongodb-mms-automation-agent.config
StandardOutput=syslog
StandardError=syslog
LimitFSIZE=infinity
LimitCPU=infinity
LimitAS=infinity
LimitNOFILE=64000
LimitRSS=infinity
LimitNPROC=64000
LimitMEMLOCK=infinity
User=mongodb
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
